<div class="row">
  <div class="col-sm-offset-4 col-sm-4">
    <div class="row">
      <h2>Login</h2>
    </div>
    <div class="row">
      <form action="" method="post">
        <div class="form-group">
          <label for="username">Username</label>
          <input name="username" type="text" class="form-control" id="username" aria-describedby="emailHelp" placeholder="Username">
          <small id="emailHelp" class="form-text text-muted">You can also use your email address for this field</small>
        </div>

        <div class="form-group">
          <label for="password">Password</label>
          <input name="password" type="password" class="form-control" id="password" placeholder="Password">
        </div>

        <button type="submit" class="btn btn-block btn-primary">Login</button>
      </form>
    </div>

  </div>
</div>
